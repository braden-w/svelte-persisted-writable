{
  "name": "svelte-persisted-writable",
  "version": "1.0.0",
  "type": "module",
  "description": "An extension of Svelte's writable that saves and restores data from localstorage automatically. Fork of @efstajas/svelte-stored-writable with better error handling and parameters as destructured object",
  "keywords": [
    "svelte",
    "store",
    "stores",
    "synced",
    "local storage",
    "localStorage",
    "writable",
    "persistent",
    "preferences"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/braden-w/svelte-persisted-writable.git"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts"
  },
  "author": "Braden Wong (fork), Georgios Jason Efstathiou (original)",
  "license": "Apache-2.0",
  "dependencies": {
    "@changesets/cli": "^2.27.1",
    "tsup": "^8.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "svelte": "^4.2.12",
    "typescript": "^5.3.3"
  }
}
